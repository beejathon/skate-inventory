<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body class="container">
    <header>
      <%- include('../partials/header') %>
    </header>

    <main>
      <div class="row">
        <div class="col-sm-10">
          <div class="jumbotron">
            <div class="card">
              <div class="card-header">
                <%= category.name %>
              </div>
              <div class="card-body">
                <% if (items.length) { %>
                  <div class="card-title">Products:</div>
                  <ul class="list-group">
                    <% items.forEach(item => { %>
                      <li class="list-group-item">
                        <a href="/catalog/item/<%= item._id %>">
                          <strong><%= item.name %></strong>
                        </a>
                      </li>
                    <% }) %>
                  </ul>
                <% } else { %>
                  <div class="card-title">No items</div>
                <% } %>
              </div>
            </div>
            <a href="/catalog/category/<%= category._id %>/delete" class="btn btn-secondary" role="button" aria-pressed="true">Delete</a>
            <a href="/catalog/category/<%= category._id %>/update" class="btn btn-secondary" role="button" aria-pressed="true">Update</a>
            </div>
          </div>

          <%- include('../partials/sidebar') %>
        </div>
      </div>
      
    </main>

    <footer>
      <%- include('../partials/footer') %>
    </footer>
  </body>
</html>
