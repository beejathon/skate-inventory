<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body class="container">
    <header>
      <%- include('../partials/header') %>
    </header>

    <main>
      <div class="row">
        <div class="col-sm-10">
          <div class="jumbotron">
            <h1><%= title %></h1>
            <form method="POST" action="" name="brandform">
              <div class="form-group">
                <label for="name">Brand name:</label>
                <input type="text" name="name" id="" class="form-control" value="<%= undefined===locals.brand ? '' : brand.name %>">
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
              <a href="/catalog/" class="btn btn-secondary">Cancel</a>
            </form>

            <% if (locals.errors) { %>
              <ul>
                <% errors.forEach(error => { %>
                  <li><%= error.msg %></li>
                <% }) %>
              </ul>
            <% } %>
          </div>
        </div>

        <%- include('../partials/sidebar') %>
    </main>

    <footer>
      <%- include('../partials/footer') %>
    </footer>
  </body>
</html>
