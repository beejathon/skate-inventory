<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body class="container">
    <header>
      <%- include('../partials/header') %>
    </header>

    <main>
      <div class="row">
        <div class="col-sm-10">
          <div class="jumbotron">
            <h1><%= title %></h1>
            <div class="card">
              <div class="card-header">
                Are you sure you want to delete this item?
              </div>
              <div class="card-body">
                <p class="card-title"><%= item.name %></p>
              </div>
            </div>
            <form method="POST" action="" style="margin-bottom: 1em; margin-top: 1em;">
              <input type="hidden" name="itemid" required="true" value="<%= item._id %>">
              <button type="submit" class="btn btn-primary btn-sm btn-block">Confirm</button>
            </form>
            <a href="/catalog/item/<%= item._id %>" class="btn btn-secondary btn-sm btn-block">Cancel</a>
          </div>
        </div>

        <%- include('../partials/sidebar') %>
      </div>
      
    </main>

    <footer>
      <%- include('../partials/footer') %>
    </footer>
  </body>
</html>
