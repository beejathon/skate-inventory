<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body class="container">
    <header>
      <%- include('../partials/header') %>
    </header>

    <main>
      <div class="row">
        <div class="col-sm-10">
          <div class="jumbotron">
            <% if (items.length) { %>
              <h1 class="h3">Unable to delete. Inventory contains the following items in this category:</h2>
              <ul class="list-group">
                <% items.forEach(item => { %>
                  <li class="list-group-item">
                    <a href="/catalog/item/<%= item._id %>">
                      <strong><%= item.name %></strong>
                    </a>
                  </li>
                <% }) %>
              </ul>
            <% } else { %>
              <div class="card">
                <div class="card-header">
                  Are you sure you want to delete this category?
                </div>
                <div class="card-body">
                  <p class="card-title"><%= category.name %></p>
                </div>
              </div>
              <form method="POST" action="" style="margin-bottom: 1em; margin-top: 1em;">
                <input type="hidden" name="categoryid" required="true" value="<%= category._id %>">
                <button type="submit" class="btn btn-primary btn-sm btn-block">Confirm</button>
              </form>
              <a href="/catalog/category/<%= category._id %>" class="btn btn-secondary btn-sm btn-block">Cancel</a>
            <% } %>
          </div>
        </div>

        <%- include('../partials/sidebar') %>
      </div>
      
    </main>

    <footer>
      <%- include('../partials/footer') %>
    </footer>
  </body>
</html>
