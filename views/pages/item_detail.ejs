<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body class="container">
    <header>
      <%- include('../partials/header') %>
    </header>

    <main>
      <div class="row">
        <div class="col-sm-10">
          <div class="jumbotron">
            <div class="card">
              <div class="card-header">
                <%= item.name %>
              </div>
              <div class="card-body">
                <p class="card-text"><%= item.description %></p>
                <% if (item.__type === "Deck") { %>
                  <p class="card-text">Width: <%= item.width %></p>
                  <p class="card-text">Length: <%= item.length %></p>
                  <p class="card-text">Wheelbase: <%= item.wheelbase %></p>
                  <% } %>
                <% if (item.__type === "Trucks") { %>
                  <p class="card-text">Width: <%= item.width %></p>
                  <p class="card-text">Height: <%= item.height %></p>
                  <% } %>
                <% if (item.__type === "Wheels") { %>
                  <p class="card-text">Size: <%= item.size %></p>
                  <p class="card-text">Durometer;:<%= item.durometer %></p>
                  <% } %>   
                <% if (item.__type === "Bearings") { %>
                  <p class="card-text">Rating: <%= item.rating %></p>
                  <% } %>       
                <% if (item.__type === "Griptape") { %>
                  <p class="card-text">Width: <%= item.color %></p>
                  <% } %>                                            
                <p class="card-text">
                  Brand: <%= item.brand.name %>
                </p>
                <p class="card-text">
                  Category: <%= item.category.name %>
                </p>
                <p class="card-text">
                  Price: <%= item.price %>
                </p>
                <p class="card-text">
                  Available in stock: <%= item.stock %>
                </p>
              </div>
            </div>
            <a href="/catalog/item/<%= item._id %>/delete" class="btn btn-secondary" role="button" aria-pressed="true">Delete</a>
            <a href="/catalog/item/<%= item._id %>/update" class="btn btn-secondary" role="button" aria-pressed="true">Update</a>
            </div>
          </div>

          <%- include('../partials/sidebar') %>
        </div>
      </div>
      
    </main>

    <footer>
      <%- include('../partials/footer') %>
    </footer>
  </body>
</html>
